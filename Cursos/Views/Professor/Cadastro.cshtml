@model Cursos.Models.Professor.ProfessorCadastroViewModel

<div class="container mt-3">

    <div class="card" style="width: 500px">

        <div class="card-body">

            <h5>Cadastro de Professores</h5>
            <p>Inclua Professores para permitir o cadastro e organização dos cursos .</p>
            <hr />

            @using (Html.BeginForm())
            {
                <div class="mb-2">
                    <label>Nome do professor:</label>
                    @Html.TextBoxFor(model => model.Nome, new{@class ="form-control", style = "width: 400px"})
                    <span class="" Text-danger>
                        @Html.ValidationMessageFor(model => model.Nome)
                    </span>
                </div>

                <div class="mb-2">
                    <input type="submit" class=" btn btn-success" value="Realizar Cadastro" />
                </div>
            }

        </div>


    </div>
</div>



